# AWS Infrastructure Environment Variables Example
# Copy this file to .env and fill in your values

# AWS Configuration
AWS_REGION=us-west-2
AWS_PROFILE=default

# Application Configuration
NODE_ENV=development
PORT=5001

# Database Configuration (Populated by Terragrunt from Secrets Manager)
DB_HOST=your-rds-endpoint.region.rds.amazonaws.com
DB_PORT=5432
DB_NAME=learningapp
DB_USERNAME=dbadmin
DB_PASSWORD=your-secure-password

# AWS Cognito Configuration (Populated by Terragrunt)
COGNITO_REGION=us-west-2
COGNITO_USER_POOL_ID=us-west-2_XXXXXXXXX
COGNITO_CLIENT_ID=your-client-id
COGNITO_DOMAIN=your-domain.auth.us-west-2.amazoncognito.com

# Application URLs
APP_URL=http://localhost:5173
API_URL=http://localhost:5001
ALB_URL=http://your-alb-url.elb.amazonaws.com

# Session Configuration
SESSION_SECRET=your-session-secret-change-in-production

# Feature Flags
ENABLE_AUTH=true
ENABLE_SOCIAL_LOGIN=false

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:5173,http://your-alb-url.elb.amazonaws.com
